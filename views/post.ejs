<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') -%>
<body>

<!-- Start your project here-->
<!-- Sidenav -->
<%- include('partials/sideNavBar') -%>
<!-- Sidenav -->

<div class="fixed-top m-3">
    <button
            id="toggler"
            class="btn btn-black"
            data-mdb-toggle="sidenav"
            data-mdb-target="#full-screen-example"
    >
        <i class="fas fa-bars"></i>
    </button>
</div>

<div class="container my-5 py-5">
    <!--Section: Design Block-->
    <sections>
        <style>
            .text {
                width:100%;
                max-height:250px;
                overflow-y:scroll;
            }
        </style>

        <!-- Background image -->
        <div class="p-5 bg-image" style="
                background-image: url('<%= blog.image %>');
                height: 790px;
                ">
            <div class="mask" style="background-color: rgba(38, 38, 38, 0.2); padding-top: 60px;">
                <div class="container-fluid px-4">
                    <div class="
                row
                d-flex
                justify-content-center
                align-items-center
                h-100
              ">
                        <div class="col-lg-11 col-xl-7">
                            <div class="card mask-custom text-white rounded-6 scroll shadow-4" style="
                                background: rgba(38, 38, 38, 0.8);
                                backdrop-filter: blur(15px);
                                background-clip: padding-box;
                              ">
                                <div class="card-body py-5 px-4 px-md-5">
                                    <h1 class="display-4 fw-bold ls-tight pb-2">
                                        <%= blog.title %>
                                    </h1>
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                                            <li class="breadcrumb-item"><a href="/blogs">Blogs</a></li>
                                            <li class="breadcrumb-item active" aria-current="page"><%= blog.title %></li>
                                        </ol>
                                    </nav>
                                    <p>
                                        Posted On <%= blog.datePosted.toLocaleString() %> - By <%= blog.userid.username %>
                                    </p>
                                    <p class="lead fw-normal mb-5 text">
                                        <%= blog.body %>
                                    </p>

                                    <% if(loggedIn){ %>
                                        <a href="/delete/post/<%= blog._id %>" class="btn btn-outline-light btn-lg">
                                            Delete Post <i class="fas fa-angle-right ms-2"></i>
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </sections>
    <!--Section: Design Block-->
</div>

<%- include('partials/footer') -%>
</body>
<%- include('partials/scripts') -%>
</html>
