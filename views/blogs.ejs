<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') -%>
<body>

<!-- Start your project here-->
<!-- Sidenav -->
<%- include('partials/sideNavBar') -%>
<!-- Sidenav -->

<div class="fixed-top m-3">
    <button
            id="toggler"
            class="btn btn-black"
            data-mdb-toggle="sidenav"
            data-mdb-target="#full-screen-example"
    >
        <i class="fas fa-bars"></i>
    </button>
</div>

<!-- Container for demo purpose -->
<div class="container my-5 py-5">

    <!--Section: Design Block-->
    <section>
        <h1 class="display-4 text-center mb-8">Blog Post & Articles To Read</h1>
        <div class="row gx-lg-5">

            <% for(i=0; i < articles.length; i++){ %>
                <div class="col-lg-4 mb-4 mb-lg-5">
                    <div class="bg-image hover-overlay hover-zoom ripple rounded-5" data-mdb-ripple-color="light">
                        <img class="img-fluid rounded-5 max-height" src="<%= articles[i].image %>"
                             alt="<%= articles[i].title %>" />
                        <a href="/post/<%= articles[i]._id %>">
                            <div class="mask" style="background-color: rgba(255, 255, 255, 0.1)"></div>
                        </a>
                    </div>
                </div>
                <div class="col-lg-8 mb-5">
                    <div>
                        <p class="mb-2"><span class="me-5"><%= articles[i].datePosted.toLocaleString() %></span><span class="text-muted">5 min read</span></p>
                        <p class="small mb-4">
                            <a href="#!">Article</a>
                        </p>
                        <p class="h3 mb-4"><%= articles[i].title %></p>
                        <p class="text-truncate mb-4 mb-xl-5" style="
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                white-space: normal;
              ">
                            <%= articles[i].body.substring(0, 210) %>
                        </p>
                        <p class="h5 mb-0"><a href="/post/<%= articles[i]._id %>" class="text-reset"><%= articles[i].userid.username %></a></p>
                    </div>
                </div>
            <% } %>
        </div>
    </section>
    <!--Section: Design Block-->

</div>
<!-- Container for demo purpose -->

<%- include('partials/footer') -%>
</body>
<%- include('partials/scripts') -%>
</html>
