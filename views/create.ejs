<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') -%>
<body>

<!-- Start your project here-->
<!-- Sidenav -->
<%- include('partials/sideNavBar') -%>
<!-- Sidenav -->

<div class="fixed-top m-3">
    <button
            id="toggler"
            class="btn btn-black"
            data-mdb-toggle="sidenav"
            data-mdb-target="#full-screen-example"
    >
        <i class="fas fa-bars"></i>
    </button>
</div>

<div class="container my-5 py-5">
    <h2 class="display-5 text-center mb-3">New Blog</h2>
    <div class="row mb-5">
        <div class="col-md-12 p-3">
            <form action="/store/post" enctype="multipart/form-data" method="post">
                <div class="mb-3">
                    <label for="subject" class="form-label">Title</label>
                    <input type="text" id="subject" name="title" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <input type="text" id="category" name="category" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Blog Image</label>
                    <input type="file" id="image" name="image" class="form-control" required accept="image/*">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea name="body" id="message" class="form-control" required spellcheck="true" rows="7"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">submit</button>
            </form>

        </div>
    </div>
</div>

<%- include('partials/footer') -%>
</body>
<%- include('partials/scripts') -%>
</html>
